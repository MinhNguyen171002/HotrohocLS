@model DoAn.ViewModel.ViewModelSK

@{
    ViewBag.Title = "Create";
}

<h2>THÊM SỰ KIỆN</h2>


@using (Html.BeginForm("Create", "SuKien", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.DisplayName("Tên sự kiện")
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Tóm tắt sự kiện")
        <div class="col-md-10">
            @Html.EditorFor(model => model.TomTatSK, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Diễn biến sự kiện")
        <div class="col-md-10">
            <input type="file" name="text" /> <br />
            @Html.ValidationMessageFor(model => model.NoiDungSK, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Hình ảnh sự kiện")
        <div class="col-md-10">
            <input type="file" multiple name="images" /> <br />
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Thời kỳ diễn ra")
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.IdThoiKy,
            new SelectList(Model.thoiKy, "IdThoiKy", "TenThoiKy"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdThoiKy, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.DisplayName("Các nhân vật tham gia")
        <div class="col-md-10">
            @Html.ListBoxFor(model => model.IdNV,
            new MultiSelectList(Model.nhanVat, "IdNV", "TenNhanVat"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdNV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
